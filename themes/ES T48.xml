    <style>
       
      :root {
          --loader-base-color: #1E2733;
      }
      
      #initial-loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--loader-base-color);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        opacity: 1;
        transition: opacity 0.8s ease-out;
        animation: pulse-bg 4s infinite alternate;
      }

      #initial-loader.hidden {
        opacity: 0;
        visibility: hidden;
      }
      
       
      .loader-spinner {
        display: block;
        width: 50px;
        height: 50px;
        margin: 10px auto;
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-top: 4px solid #ffffff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }

      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
      
      .loader-text {
        font-size: 1.2rem;
        font-weight: 500;
        color: #ffffff;
        margin-top: 20px;
        animation: pulse-text 1.5s infinite;
      }

      @keyframes pulse-text {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
      }
      
      @keyframes pulse-bg {
        0%   { background-color: var(--loader-base-color); }
        50%  { background-color: #354558; } 
        100% { background-color: var(--loader-base-color); }
      }
    </style>
