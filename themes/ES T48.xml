    &lt;script src=&#39;https://cdn.jsdelivr.net/gh/gorarypro/multipurpose-website-builder@main/multipurpose-website-builder/src/assets/js/modal-guard.js&#39;&gt;&lt;/script&gt;


    &lt;script&gt;
      (function () {
        function setFooterYear() {
          var el = document.getElementById(&#39;footerYear&#39;);
          if (el) el.textContent = String(new Date().getFullYear());
        }


        // --- HIDE LOADER FUNCTION ---
        function hideLoader() {
          var loader = document.getElementById(&#39;initial-loader&#39;);
          if (loader) {
            loader.classList.add(&#39;hidden&#39;);
            // Remove element from DOM after transition
            setTimeout(function() {
              loader.remove();
            }, 800); // Wait for the 0.8s transition to finish
          }
          
          // CRITICAL FIX: Aggressively remove any rogue Bootstrap backdrops after hiding loader
          cleanBootstrapBackdrops();
        }
        
        // CRITICAL FIX: Function to remove the transparent backdrop element
        function cleanBootstrapBackdrops() {
             document.querySelectorAll(&#39;.modal-backdrop&#39;).forEach(backdrop =&gt; {
                 backdrop.remove();
             });
             // Also ensure the body class is reset in case Bootstrap left it there
             document.body.classList.remove(&#39;modal-open&#39;);
             document.body.style.overflow = &#39;&#39;;
             document.body.style.paddingRight = &#39;&#39;;
        }


        function fixWhatsappHref() {
          var a = document.getElementById(&#39;floatingWhatsapp&#39;);
          if (!a) return;
          try {
            var num = (window.Runtime && Runtime.settings && Runtime.settings.contact_whatsapp) ? String(Runtime.settings.contact_whatsapp) : &#39;&#39;;
            num = (num || &#39;&#39;).replace(/[^\d&#43;]/g, &#39;&#39;);
            if (num) a.setAttribute(&#39;href&#39;, &#39;https://wa.me/&#39; &#43; num);
          } catch (e) {}
        }


        document.addEventListener(&#39;DOMContentLoaded&#39;, function () {
          setFooterYear();
          // NO setInterval: We rely on the single cleanup within hideLoader to prevent runtime conflicts.
        });


        document.addEventListener(&#39;runtime_ready&#39;, function () {
          fixWhatsappHref();
          setFooterYear();
          // --- HIDE THE LOADER WHEN RUNTIME IS READY ---
          hideLoader();
        });


        // Safety net in case runtime_ready fails to fire (e.g., script error)
        window.addEventListener(&#39;load&#39;, function() {
          setTimeout(hideLoader, 5000); // Hide after a max 5 second wait
        });


      })();
    &lt;/script&gt;


