    &lt;!-- PLACEHOLDER REPLACEMENT SCRIPT (SINGLE, CLEAN VERSION) --&gt;
    &lt;script&gt;
    (function() {
      function replacePlaceholders() {
        if (!window.Runtime || !Runtime.settings) return;

        const s = Runtime.settings;

        const map = {
          &#39;{{CONTACT_PHONE}}&#39;: s.contact_phone || &#39;&#39;,
          &#39;{{CONTACT_EMAIL}}&#39;: s.contact_email || &#39;&#39;,
          &#39;{{WHATSAPP_NUMBER}}&#39;: s.contact_whatsapp || &#39;&#39;,
          &#39;{{SITE_TITLE}}&#39;: s.site_title || &#39;&#39;,
          &#39;{{CURRENCY_SYMBOL}}&#39;: s.currency_symbol || &#39;&#39;,
          &#39;{{HERO_TITLE}}&#39;: s.hero_title || &#39;&#39;,
          &#39;{{HERO_SUBTITLE}}&#39;: s.hero_subtitle || &#39;&#39;
        };

        let html = document.body.innerHTML;
        for (const key in map) {
          html = html.replace(new RegExp(key, &#39;g&#39;), map[key]);
        }
        document.body.innerHTML = html;
      }

      // Run AFTER runtime has loaded settings
      document.addEventListener(&#34;runtime_ready&#34;, replacePlaceholders);
    })();
    &lt;/script&gt;

