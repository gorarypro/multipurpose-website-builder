<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:css='false' b:defaultwidgetversion='2' b:layoutsVersion='3' b:responsive='true' b:version='2' xmlns='http://www.w3.org/1999/xhtml' xmlns:b='http://www.google.com/2005/gml/b' xmlns:data='http://www.google.com/2005/gml/data' xmlns:expr='http://www.google.com/2005/gml/expr'>
<head>
  <meta content='width=device-width, initial-scale=1.0, user-scalable=no' name='viewport'/>
  
  <title><data:blog.pageTitle/></title>
  <meta expr:content='data:blog.pageTitle' property='og:title'/>
  <meta content='website' property='og:type'/>
  <meta expr:content='data:blog.url' property='og:url'/>
  <meta content='ES T60 Sub' property='og:description'/>

  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet'/>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css' rel='stylesheet'/>
  <link href='style.css' rel='stylesheet' type='text/css'/>

  <b:skin><![CDATA[
    :root { --primary: #000000; --bg: #0d0d0d; --card: #1a1a1a; --text: #ffffff; }
    body { background: var(--bg); color: var(--text); font-family: 'Segoe UI', system-ui, sans-serif; overflow-x: hidden; }
    #app { opacity: 0; transition: opacity 0.5s ease; }
    #app.loaded { opacity: 1; }
    .skeleton-box { background: #222; height: 300px; border-radius: 20px; position: relative; overflow: hidden; }
    .skeleton-box::after { content: ""; position: absolute; top: 0; left: -100%; width: 100%; height: 100%; background: linear-gradient(90deg, transparent, rgba(255,255,255,0.05), transparent); animation: shimer 1.5s infinite; }
    @keyframes shimer { 100% { left: 100%; } }
    .cart-drawer { position: fixed; top: 0; right: -100%; width: 100%; max-width: 420px; height: 100vh; background: var(--card); z-index: 2050; transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1); border-left: 1px solid #333; }
    .cart-drawer.open { right: 0; }
    #Blog1 { display: none !important; }
  ]]></b:skin>
</head>
<body>
  <div class='app-shell' id='app'>
    <nav class='navbar navbar-dark px-4 sticky-top'>
      <div class='container-fluid'>
        <a class='navbar-brand fw-bold' href='#'>ES T60</a>
        <b:if cond='false == "true"'>
          <div class='mx-auto d-none d-lg-block' style='width: 35%;'>
            <input class='form-control rounded-pill bg-dark text-white border-secondary' id='shop-search' placeholder='Search...' type='text'/>
          </div>
        </b:if>
        <div class='cart-trigger' onclick='CartModule.toggle()' style='cursor:pointer'>
          <i class='bi bi-bag-heart fs-3 text-primary'></i>
          <span id='cartCount' class='badge rounded-pill bg-danger'>0</span>
        </div>
      </div>
    </nav>

    <header class='text-center py-5' style='background: linear-gradient(180deg, var(--primary), transparent);'>
      <h1 class='display-3 fw-bold'>ES T60</h1>
      <p class='lead opacity-75'>ES T60 Sub</p>
    </header>

    <main class='container py-5' id='shopContent'>
      <div class='row g-4' id='skeleton-loader'>
        <div class='col-6 col-md-3'><div class='skeleton-box'></div></div>
        <div class='col-6 col-md-3'><div class='skeleton-box'></div></div>
        <div class='col-6 col-md-3'><div class='skeleton-box'></div></div>
        <div class='col-6 col-md-3'><div class='skeleton-box'></div></div>
      </div>
    </main>

    <div class='cart-drawer' id='cartDrawer'>
      <div class='p-4 border-bottom border-secondary d-flex justify-content-between'>
        <h4 class='m-0 fw-bold'>Your Order</h4>
        <button class='btn-close btn-close-white' onclick='CartModule.toggle()'></button>
      </div>
      <div id='cartItems' class='p-4 flex-grow-1 overflow-auto'></div>
      <div class='p-4 border-top border-secondary'>
        <div class='d-flex justify-content-between mb-3 fs-4 fw-bold'>
          <span>Total:</span><span id='cartTotal'>0 DH</span>
        </div>
        <button class='btn btn-primary w-100 py-3 fw-bold rounded-pill' onclick='CartModule.checkout()'>ORDER ON WHATSAPP</button>
      </div>
    </div>
  </div>

  <div style='display:none'><b:section id='main'><b:widget id='Blog1' type='Blog'/></b:section></div>

  <script>
    window.FUSION_CONFIG = {
      api: 'https://script.google.com/macros/s/AKfycbySV9PbNWxQTSdwrZ-1TOgJWI_LUTLlNgX3IO2ovLWjxt4vU13RAo-Sc0CLmzaVNVgc0w/exec',
      blog: 'eventsushi.blogspot.com',
      whatsapp: '212664070513',
      assets: ''
    };
  </script>
  <script src='runtime.js'></script>
  <script src='products.js'></script>
  <script src='cart.js'></script>
  <script src='search.js'></script>
</body>
</html>